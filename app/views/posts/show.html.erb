<%= render "navbar" %>

<div class="viewPost">

  <%= link_to "&larr; Back".html_safe, posts_path %>

  <article>

    <h2><%= @post.title %></h2>
    <h3>By: <%= @post.user.fullname %></h3>
    <time>Created <%= @post.created_at %></time>
    <p><%= @post.content %></p>
      <%= link_to "Edit", edit_post_path(@post) %> |
      <%= link_to "Delete", post_path(@post), method: :delete %>

    <div class='comments'>
      <h3>Comments</h3>
      <%= link_to "Add new comment", new_post_comment_path(@post) %>
      <div class="dividerComment"></div>
      <% @post.comments.each do |comment| %>
        <div>
          <p><%= comment.content %></p>
          <time>Created <%= comment.created_at %></time><br>
          <%= link_to "Edit", edit_post_comment_path(@post, comment) %> |
          <%= link_to "Delete", post_comment_path(@post, comment), method: :delete %>
        </div>
      <% end %>
    </div>

  </article>
</div>
