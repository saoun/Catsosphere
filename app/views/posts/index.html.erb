<%= render "navbar" %>



<div class="viewAllPosts">
  <% @posts.each do |post| %>
    <article>
      <h2 class="postTitle"><%= link_to post.title, post_path(post) %></h2>
      <% if post.user.fullname == "" %>
        <h5 class="caption">By <a href="users/<%=post.user['id']%>"><%= post.user.name %></a> | Posted on <%= post.created_at.to_date %> | Comments: <%= post.comments.count %> </h5>
      <%else%>
        <h5 class="caption">By <a href="users/<%=post.user['id']%>"><%= post.user.fullname %></a> | Posted on <%= post.created_at.to_date %> | Comments: <%= post.comments.count %> </h5>
      <%end%>
      <p class="postPreview"><%= truncate post.content, length: 300 %></p><br>
      <%= link_to 'Read More', post %>
    </article>
    <div class="divider"></div>
  <% end %>
</div>
