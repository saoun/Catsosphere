<%= form_for(@user) do |f| %>


  <div class="field">
    <%= f.label :full_name %><br>
    <%= f.text_field :fullname, class: 'form-control' %><br>
    <%= f.label :bio %><br>
    <%= f.text_field :bio, class: 'form-control' %><br>
    <%= f.label :contact %><br>
    <%= f.text_field :email, class: 'form-control' %><br>
    <%= f.file_field :avatar %>
  </div>

  <%= f.submit "Update", :class => "btn btn-default" %>

<% end %>
