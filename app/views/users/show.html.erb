<%= render "posts/navbar" %>

<div class="container">

<% if current_user %>
  <% if @user['fullname'] == current_user.fullname %>

   <% if current_user.fullname == "" %>
      <h1 class="welcome"><%= "Hi There!" %></h1>
    <%else%>
      <h1 class="welcome"><%= "Hi, #{current_user.fullname}" %></h1>
    <%end%>

    <div>
      <h5><a href ="<%=current_user.id%>/edit">Edit Profile</a></h5>
    </div>

  <%end%>

    <% if @user['fullname'] != current_user.fullname %>
      <h1><%= @user['fullname'] %></h1>
    <% end %>

  <%else%>
  <h1><%= @user['fullname'] %></h1>

  <% end %>

  <div class="dividerComment"></div>

  <div class="optionsMiddle">
    <strong>Full Name: </strong><p><%= @user['fullname'] %></p>
    <strong>Bio:</strong> <p><%= @user['bio'] %></p>
    <strong>Contact:</strong> <p><%= @user['email'] %></p>
    <%= image_tag @user.avatar.url(:medium) %>
  </div>

  <div class="dividerComment"></div>

<% if current_user %>

  <div class="optionsBottom">
    <% if @user['fullname'] == current_user.fullname %>

      <%= link_to "Sign Out", destroy_user_session_path, method: :delete %>
    <% end %>
  </div>

<% end %>

</div>
