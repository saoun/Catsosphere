<%= render "posts/navbar" %>

<div class="container">

  <%= link_to "&larr; Back".html_safe, posts_path %>

  <h3> View Users </h3>
  <div class="divider"></div>

  <% @users.each do |user| %>
    <div class="user">
      <h6>Name: </h6><a href="users/<%=user['id']%>"> <%= user['fullname']%></a><br>
      <h6>Contact: </h6> <%= user['email'] %><br>
      <h6>Bio: </h6> <%= user['bio'] %><br>
      <div class="divider"></div>
    </div>
  <% end %>

</div>

